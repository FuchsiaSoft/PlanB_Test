<div class="container-fluid">

    <h1>@ViewBag.Title.</h1>
    <p>@ViewBag.Message</p>
    <h2>@ViewBag.MessageHeader.</h2>

    <div class="row">
        <div class="col-lg-12">
            <div class="groupPromo">
                <div class="listWebpart">
                    <ul>
                        @{
                                foreach (var category in @ViewBag.CategoriesList)
                                {
                                    <li>
                                        <a href="\Home\Forms?id=@category.CategoryId">
                                            <h3>@category.CategoryTittle</h3>
                                            <br />
                                            <p>@category.CategoryDescription</p>
                                        </a>
                                    </li>
                                }
                            }
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>